@using BugTrackerV4.Helpers
@model List <BugTrackerV4.Models.UsersViewModel>
@{
    ViewBag.Title = "Index";
}
<hr>
<table class="table" id="myTable">
    <thead>
        <tr>
            <thead>User</thead>
            <thead>Roles</thead>
            <thead>Assign/unassign</thead>
            <thead>Details</thead>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>
                    @user.User.FullName
                </td>
                <td>
                   @foreach (var role in user.Roles)
                   {
                    <p>@role</p>
                   }
                </td>
                <td><a href="@Url.Action("EditUser", new { Id = user.User.Id})">   Assign Roles</a></td>
                <td><a href="@Url.Action("DetailsUserRoles", new { Id = user.User.Id})">  Details</a></td>
            </tr>
        }
    </tbody>
  </table>

@section scripts{

<script>$(document).ready(function () {
    $('#myTable').DataTable();
});</script>
    }

