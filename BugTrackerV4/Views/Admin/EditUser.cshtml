@model BugTrackerV4.Models.AdminUserViewModel
@{
    ViewBag.Title = "EditUser";
}

<div class="container">
    <h2> Assign Roles </h2>
    <div class="row">
        <div class="col-md-4">
            <div class="panel panel-green margin-bottom-40">
                <div class="panel-heading">
                    @*<h3 class="panel-title"> @Model.User.DisplayName</h3>*@
                </div>
            </div>
            <form action="EditUser" method="Post" class="form-horizontal">
                @Html.HiddenFor(m => m.User.Id, new { })
                <div class="form-group">
                    <div class="col-lg-offset-2 col-lg-9">
                        @Html.ListBox("SelectedRoles", Model.Roles, htmlAttributes: new { @id = "mySelect" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-offset-2 col-lg-9">
                        <button type="submit" class="btn-u btn-u-green">Assign Roles</button>
                    </div>
                </div>
            </form>


        </div>
        <!--End Hover Rows-->
    </div>
    <div>
        @Html.ActionLink("Back to List", "Users")
    </div>
</div>
